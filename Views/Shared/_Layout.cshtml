<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Biryani Shop</title>
    <link rel="stylesheet" href="/css/site.css?v=1.1" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" href="/">Biryani Shop</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    @await Component.InvokeAsync("CartCount")
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2024 Biryani Shop</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
