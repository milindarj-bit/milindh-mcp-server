@model List<myapp.Models.CartItem>

@{ ViewData["Title"] = "Shopping Cart"; }

<div class="container mt-5">
    <h2>Your Shopping Cart</h2>

    @if (Model.Count == 0)
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>₹@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>₹@item.Total</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right"><strong>Total:</strong></td>
                    <td><strong>₹@Model.Sum(item => item.Total)</strong></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <a href="/Cart/Checkout" class="btn btn-primary">Checkout</a>
        </div>
    }
</div>
