@model IEnumerable<myapp.Models.CartItem>

@inject Microsoft.AspNetCore.Identity.SignInManager<myapp.Models.ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (Model.Any())
{
    decimal total = 0;
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var subtotal = item.Quantity * item.Price;
                <tr>
                    <td>@item.Biryani.Name</td>
                    <td>@item.Quantity</td>
                    <td>₹@item.Price.ToString("0.00")</td>
                    <td>₹@subtotal.ToString("0.00")</td>
                </tr>
                total += subtotal;
            }
        </tbody>
    </table>
    <div class="text-right">
        <h4>Total: ₹@total.ToString("0.00")</h4>
        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary">Checkout</a>
        }
        else
        {
            <p>You must be logged in to check out.</p>
            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Cart")" class="btn btn-primary">Login to Checkout</a>
        }
    </div>
}
else
{
    <p>Your cart is empty.</p>
}
